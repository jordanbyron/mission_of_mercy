- title 'Reports - Treatment Area Distribution'

- content_for :header do
  :javascript
    document.observe('dom:loaded', function(){
      #{over_capacity(@areas)}
    });

= header do
  %h1 Treatment Area Distribution
  #controls
    - form_tag admin_treatment_area_distribution_report_path do
      = submit_tag "Refresh"


= raw bar_graph "treatment_area_graph",
                @current_capacity,
                { :style => "width:845px; height:200px" }

%p
  = link_to "Back", admin_reports_path, :class => "back"
