- title 'Users'

= header do
  %h1 Users

%table
  %tr
    %th Login
    %th Name
    %th Controls

    - @users.each do |user|
      %tr{:class=>cycle('even', 'odd')}
        %td= user.login
        %td= user.name
        %td= link_to 'Edit', edit_admin_user_path(user)


%p
  = link_to 'New', new_admin_user_path
